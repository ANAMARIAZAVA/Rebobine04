<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#0F1523">

    <!-- Barra de Ações (Toolbar) com botão Cadastrar Cliente e Cadastrar Filme -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginBottom="16dp">

        <!-- Botão Cadastrar Cliente -->
        <Button
            android:id="@+id/buttonCadastrarCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar Cliente"
            android:backgroundTint="#FEC007"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="16dp"/>

        <!-- Botão Cadastrar Filme -->
        <Button
            android:id="@+id/buttonCadastrarFilme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar Filme"
            android:backgroundTint="#FEC007"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Campo para busca de filmes -->
    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar filme..."
        android:textColor="#FFFFFF"
        android:background="#2A2A2A"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Lista de filmes (desta forma para facilitar a visualização, por exemplo com RecyclerView) -->
    <RecyclerView
        android:id="@+id/recyclerViewMovies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
